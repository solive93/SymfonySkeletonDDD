#!/bin/bash

# Get the commit message
commit_message=$(git log -1 --pretty=%B)

# Check if the commit message follows the conventional commit convention
if ! grep -qE '^(feat|fix|docs|style|refactor|test|chore)(\([a-z-]+\))?: .+' <<< "$commit_message"; then
  echo "Commit message does not follow conventional commit convention"
  exit 1
fi
